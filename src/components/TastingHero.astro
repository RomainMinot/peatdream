---
import { Image } from 'astro:assets';
import FormattedDate from './FormattedDate.astro';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  date?: Date;
  category?: string;
  heroImage?: ImageMetadata | string;
  readingTime?: number;
}

const { title, date, category, heroImage, readingTime } = Astro.props;
---

<div class="relative w-full h-[60vh] min-h-[400px] max-h-[600px] overflow-hidden">
  {
    heroImage && (
      <div class="absolute inset-0">
        {typeof heroImage === 'string' ? (
          <img src={heroImage} alt={title} class="w-full h-full object-cover" />
        ) : (
          <Image
            src={heroImage}
            alt={title}
            class="w-full h-full object-cover"
            widths={[768, 1024, 1536, 1920]}
            sizes="100vw"
          />
        )}
        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent" />
      </div>
    )
  }

  <!-- Back Button Icon - Fixed Position -->
  <div
    id="back-button"
    class="fixed top-24 left-4 sm:top-28 sm:left-6 md:left-8 z-50"
    style="transition: top 0.3s ease;">
    <a
      href="/tastings"
      class="group inline-flex items-center justify-center w-12 h-12 sm:w-14 sm:h-14 bg-white hover:bg-peat-500 text-gray-800 hover:text-white rounded-full shadow-lg hover:shadow-2xl transition-all duration-300 border-2 border-accent-200 hover:border-peat-600"
      aria-label="Retour aux dégustations">
      <svg
        class="w-6 h-6 sm:w-7 sm:h-7 transition-transform group-hover:-translate-x-1 group-hover:scale-110"
        fill="none"
        stroke="currentColor"
        stroke-width="2.5"
        viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
    </a>
  </div>

  <div class="relative h-full flex items-end">
    <div class="w-full max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pb-12 md:pb-16">
      {
        category && (
          <span class="inline-block mb-4 px-4 py-1.5 bg-peat text-accent-900 rounded-full text-sm font-semibold uppercase tracking-wide">
            {category}
          </span>
        )
      }

      <h1
        class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 leading-tight line-clamp-3"
        style="text-shadow: 0 2px 12px rgba(0, 0, 0, 0.7), 0 4px 20px rgba(0, 0, 0, 0.5);"
        title={title}>
        {title}
      </h1>

      <div class="flex flex-wrap items-center gap-4 text-white/90 text-sm md:text-base">
        {
          date && (
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                />
              </svg>
              <FormattedDate date={date} />
            </div>
          )
        }

        {
          readingTime && (
            <>
              <span class="text-white/50">•</span>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
                <span>{readingTime} min de lecture</span>
              </div>
            </>
          )
        }
      </div>
    </div>
  </div>
</div>
