---
import { Image } from 'astro:assets';
import FormattedDate from './FormattedDate.astro';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  date?: Date;
  category?: string;
  heroImage?: ImageMetadata | string;
  readingTime?: number;
}

const { title, date, category, heroImage, readingTime } = Astro.props;
---

<div class="relative w-full h-[60vh] min-h-[400px] max-h-[600px] overflow-hidden">
  {
    heroImage && (
      <div class="absolute inset-0">
        {typeof heroImage === 'string' ? (
          <img src={heroImage} alt={title} class="w-full h-full object-cover" />
        ) : (
          <Image
            src={heroImage}
            alt={title}
            class="w-full h-full object-cover"
            widths={[768, 1024, 1536, 1920]}
            sizes="100vw"
          />
        )}
        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent" />
      </div>
    )
  }

  <div class="relative h-full flex items-end">
    <div class="w-full max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pb-12 md:pb-16">
      {
        category && (
          <span class="inline-block mb-4 px-4 py-1.5 bg-peat text-accent-900 rounded-full text-sm font-semibold uppercase tracking-wide">
            {category}
          </span>
        )
      }

      <h1
        class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 leading-tight">
        {title}
      </h1>

      <div class="flex flex-wrap items-center gap-4 text-white/90 text-sm md:text-base">
        {
          date && (
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                />
              </svg>
              <FormattedDate date={date} />
            </div>
          )
        }

        {
          readingTime && (
            <>
              <span class="text-white/50">â€¢</span>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                  />
                </svg>
                <span>{readingTime} min de lecture</span>
              </div>
            </>
          )
        }
      </div>
    </div>
  </div>
</div>
