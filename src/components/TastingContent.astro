---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class={`prose prose-lg max-w-none ${className || ''}`}>
  <slot />
</div>

<style>
  .prose {
    color: rgb(var(--black));
  }

  .prose :global(h1) {
    @apply text-4xl md:text-5xl font-bold mb-6 mt-12 text-accent;
  }

  .prose :global(h2) {
    @apply text-2xl md:text-3xl font-semibold mb-4 mt-12 text-accent border-b-2 border-peat pb-2;
  }

  .prose :global(h3) {
    @apply text-xl md:text-2xl font-semibold mb-3 mt-8 text-accent-700;
  }

  .prose :global(h4) {
    @apply text-lg md:text-xl font-semibold mb-2 mt-6 text-accent-800;
  }

  .prose :global(p) {
    @apply text-base md:text-lg leading-relaxed mb-4 text-gray-700;
  }

  .prose :global(a) {
    @apply text-peat-600 hover:text-peat-700 underline decoration-peat-300 hover:decoration-peat-500 transition-colors;
  }

  .prose :global(strong) {
    @apply font-semibold text-accent-900;
  }

  .prose :global(ul),
  .prose :global(ol) {
    @apply my-6 space-y-2;
  }

  .prose :global(li) {
    @apply text-base md:text-lg leading-relaxed text-gray-700;
  }

  .prose :global(ul > li) {
    @apply pl-1;
  }

  .prose :global(blockquote) {
    @apply border-l-4 border-peat pl-4 py-2 my-6 italic text-gray-600 bg-accent-50 rounded-r;
  }

  .prose :global(code) {
    @apply bg-accent-100 text-accent-800 px-1.5 py-0.5 rounded text-sm font-mono;
  }

  .prose :global(pre) {
    @apply bg-accent-900 text-white p-4 rounded-lg overflow-x-auto my-6;
  }

  .prose :global(pre code) {
    @apply bg-transparent text-white p-0;
  }

  .prose :global(img) {
    @apply rounded-lg shadow-lg my-8 mx-auto;
  }

  .prose :global(hr) {
    @apply my-12 border-t-2 border-accent-200;
  }

  .prose :global(table) {
    @apply w-full my-6 border-collapse;
  }

  .prose :global(th) {
    @apply bg-accent-100 font-semibold p-3 text-left border border-accent-300;
  }

  .prose :global(td) {
    @apply p-3 border border-accent-200;
  }

  /* Sections de dégustation spéciales */
  .prose :global(h3:has(+ p:contains('dégustation'))) {
    @apply bg-peat-50 p-4 rounded-lg border-l-4 border-peat;
  }
</style>
